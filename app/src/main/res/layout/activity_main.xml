<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Send"
        android:id="@+id/sendMessageButton"
        android:onClick="sendMessage"
        android:layout_alignTop="@+id/messageField"
        android:layout_alignStart="@+id/contactSearchButton" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/messageField"
        android:layout_below="@+id/contactSearchButton"
        android:layout_alignParentStart="true"
        android:layout_marginTop="84dp"
        android:layout_toStartOf="@+id/sendMessageButton" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/contactSearchField"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_toStartOf="@+id/contactSearchButton" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Contacts"
        android:onClick="searchContact"
        android:id="@+id/contactSearchButton"
        android:layout_alignTop="@+id/contactSearchField"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="See full log"
        android:onClick="reviewMessages"
        android:id="@+id/sentAndReceivedMessagesButton"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="54dp"
        android:layout_alignEnd="@+id/sendMessageButton" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Clean logs"
        android:id="@+id/cleanLogsButton"
        android:onClick="cleanLogs"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_alignEnd="@+id/sendMessageButton" />

</RelativeLayout>